<!DOCTYPE html>
<html>
<head>
	<title><%= house.title %> - Familia</title>
	<meta name="description" content="<%= contacts.metaDescription %>">
	<meta name="keywords" content="<%=  contacts.metaKeywords %>">
	<meta name="author" content="guyswhocode">
	<% include ../../home/views/partials/styles.ejs %>
	<link rel="stylesheet" href="/contacts/public/css/contacts.css">
</head>
<body>
	<% include ../../home/views/partials/navbar.ejs %>
	<% if(house){ %>
	<div class="ui text container house">
		<header class="house-header">
			<h1 class="ui center aligned header"><%= house.title %></h1>
		</header>
		<div class="ui segments">
			<div class="ui segment">
				<h4 class="ui header">Family Members</h4>
			</div>
			<div class="ui segment">
				<div class="four ui cards">
					<% if(house.contacts.length){ %>
					<% house.contacts.forEach(function(member){ %>
					<div class="ui card">
						<div class="image">
							<img src="/contacts/public/uploads/avatars/<% if(member.avatar){ %><%= member.avatar %><% }else{ %>default.jpg<% } %>">
						</div>
						<div class="content">
							<a class="header" href="/contacts/<%= member._id %>"><%= member.full_name %></a>
							<div class="meta">
								<span class="capitalize"><%= member.relation %></span>
							</div>
						</div>
					</div>
					<% });}  %>
				</div>
			</div>
		</div>
		<br>
		<div>
			<a href="/houses/<%= house._id %>/edit" class="ui basic primary button">Update</a>
			<a href="/houses/<%= house._id %>" class="ui basic red button">Delete</a>
		</div>
	</div>
	<% } %>
	<% include ../../home/views/partials/footer.ejs %>
	<% include ../../home/views/partials/scripts.ejs %>	
	<script src="/contacts/public/js/script.js"></script>
</body>
</html>
